---
import Container from "./Container.astro"
---
<footer class="bg-lime bg-fixed bg-bottom text-black">
    <Container>
        <div class="py-6">
            <div class="flex flex-col items-center justify-between md:flex-row">

                <div class="flex mt-4 md:m-0">
                    <div class="-mx-4">
                        @ <span id="currentYear"></span> Laravel Company | Made with &hearts; <a
                            href="https://izdrail.com/" target="_blank" rel="noopener noreferrer" class="underline">Izdrail</a>
                    </div>
                </div>
            </div>

        </div>
    </Container>
</footer>

<script is:inline>
    const year = new Date().getFullYear();
    document.getElementById("currentYear").innerHTML = `${year}`;
</script>

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-8TL0ML695T"></script>
<script>
    window.dataLayer = window.dataLayer || [];

    function gtag() {
        dataLayer.push(arguments);
    }

    gtag('js', new Date());

    gtag('config', 'G-8TL0ML695T');
</script>